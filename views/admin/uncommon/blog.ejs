<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../common/head.ejs') %>
  </head>

  <body>
    <div class="wrapper">
      <%- include('../common/sidebar.ejs') %>

      <div class="main">
        <%- include('../common/navbar.ejs') %>

        <!-- Flash Messages -->
        <% if (sucess && sucess != '') { %>
        <div
          class="alert alert-success"
          role="alert"
          style="
            position: absolute;
            top: 50px;
            left: 50%;
            transform: translateX(-50%);
            width: 50%;
            text-align: center;
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
            border-radius: 5px;
            padding: 10px;
            z-index: 1000;
          "
        >
          <%= sucess %>
        </div>
        <% } else if (err && err != '') { %>
        <div
          class="alert alert-danger"
          role="alert"
          style="
            position: absolute;
            top: 50px;
            left: 50%;
            transform: translateX(-50%);
            width: 50%;
            text-align: center;
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            padding: 10px;
            z-index: 1000;
          "
        >
          <%= err %>
        </div>
        <% } %>

        <main
          class="content"
          style="padding: 20px; background-color: #f8f9fa; min-height: 100vh"
        >
          <div
            style="
              max-width: 100%;
              margin: 0 auto;
              background: #ffffff;
              padding: 20px;
              border-radius: 8px;
              box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            "
          >
            <h2 style="text-align: center; margin-bottom: 20px; color: #343a40">
              Blog List
            </h2>
            <div
              style="
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100%;
              "
            >
              <a
                href="/admin/addblog"
                style="
                  background-color: blue;
                  color: white;
                  padding: 8px 12px;
                  border-radius: 5px;
                  text-decoration: none;
                  margin-right: 5px;
                  margin-bottom: 30px;
                "
                >Post Blog</a
              >
            </div>

            <div style="overflow-x: auto">
              <table
                style="
                  width: 100%;
                  border-collapse: collapse;
                  font-family: Arial, sans-serif;
                "
              >
                <thead>
                  <tr
                    style="
                      background-color: #007bff;
                      color: white;
                      text-align: left;
                    "
                  >
                    <th style="padding: 10px">Image</th>
                    <th style="padding: 10px">Title</th>
                    <th style="padding: 10px">Description</th>
                    <th style="padding: 10px; text-align: center">Status</th>
                    <th style="padding: 10px; text-align: center">Edit</th>
                    <th style="padding: 10px; text-align: center">Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% blogs.slice(0,blogs.length).reverse().forEach((value) => {
                  %>
                  <tr style="border-bottom: 1px solid #ddd">
                    <td style="padding: 10px; text-align: center">
                      <img
                        src="http://localhost:3004/<%= value.image %>"
                        alt="Blog Image"
                        style="
                          width: 60px;
                          height: 60px;
                          border-radius: 5px;
                          object-fit: cover;
                        "
                      />
                    </td>
                    <td
                      style="padding: 10px; color: #343a40; font-weight: bold"
                    >
                      <%= value.title %>
                    </td>
                    <td style="padding: 10px; color: #495057; max-width: 400px">
                      <%= value.description.slice(0,100) %>
                    </td>
                    <td style="padding: 10px; text-align: center">
                      <!-- Toggle Active Button -->
                      <a
                        href="/admin/toggleblogactive/<%= value._id %>"
                        style="background-color: <%= value.active ? '#ffc107' : '#28a745' %>; color: white; padding: 8px 12px; border-radius: 5px; text-decoration: none; margin-left: 5px;"
                      >
                        <%= value.active ? 'Deactivate' : 'Activate' %>
                      </a>
                    </td>

                    <td>
                      <!--Edit button-->
                      <a
                        href="/admin/singleblogget/<%= value._id %>"
                        style="
                          background-color: #28a745;
                          color: white;
                          padding: 8px 12px;
                          border-radius: 5px;
                          text-decoration: none;
                          margin-right: 5px;
                        "
                        >Edit</a
                      >
                    </td>

                    <td>
                      <!-- Delete button-->
                      <a
                        href="/admin/deleteblogget/<%= value._id %>"
                        style="
                          background-color: #dc3545;
                          color: white;
                          padding: 8px 12px;
                          border-radius: 5px;
                          text-decoration: none;
                        "
                        >Delete</a
                      >
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </main>

        <%- include('../common/footer.ejs') %>
      </div>
    </div>
  </body>
</html>
