<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../common/head.ejs') %>
  </head>

  <body>
    <div class="wrapper">
      <%- include('../common/sidebar.ejs') %>

      <div class="main">
        <%- include('../common/navbar.ejs') %>

        <main
          class="content"
          style="padding: 20px; background-color: #f8f9fa; min-height: 100vh"
        >
          <div
            style="
              max-width: 100%;
              margin: 0 auto;
              background: #ffffff;
              padding: 20px;
              border-radius: 8px;
              box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            "
          >
            <h2 style="text-align: center; margin-bottom: 20px; color: #343a40">
              Contact List
            </h2>
            <div style="overflow-x: auto">
              <table
                style="
                  width: 100%;
                  border-collapse: collapse;
                  font-family: Arial, sans-serif;
                "
              >
                <thead> 
                  <tr
                    style="
                      background-color: #007bff;
                      color: white;
                      text-align: left;
                    "
                  >
                    <th style="padding: 10px">Name</th>
                    <th style="padding: 10px">Phone</th>
                    <th style="padding: 10px">Email</th>
                    <th style="padding: 10px; text-align: center">Message</th>
                  </tr>
                </thead>
                <tbody>
                  <%
                  contacts.slice(0,contacts.length).reverse().forEach((value) => { %>
                  <tr style="border-bottom: 1px solid #ddd">
                    <td
                      style="padding: 10px; color: #343a40; font-weight: bold"
                    >
                      <%= value.name %>
                    </td>
                    <td style="padding: 10px; color: #495057; max-width: 400px">
                      <%= value.phone %>
                    </td>
                    <td style="padding: 10px; color: #495057; max-width: 400px">
                      <%= value.email %>
                    </td>
                    <td style="padding: 10px; color: #495057; max-width: 400px">
                      <%= value.message %>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </main>

        <%- include('../common/footer.ejs') %>
      </div>
    </div>
  </body>
</html>
