<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../common/head.ejs') %>
  </head>

  <body>
    <div class="wrapper">
      <%- include('../common/sidebar.ejs') %>

      <div class="main">
        <%- include('../common/navbar.ejs') %>

        <!-- Flash Messages -->
        <% if (sucess && sucess != '') { %>
        <div
          class="alert alert-success"
          role="alert"
          style="
            position: absolute;
            top: 50px;
            left: 50%;
            transform: translateX(-50%);
            width: 50%;
            text-align: center;
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
            border-radius: 5px;
            padding: 10px;
            z-index: 1000;
          "
        >
          <%= sucess %>
        </div>
        <% } else if (err && err != '') { %>
        <div
          class="alert alert-danger"
          role="alert"
          style="
            position: absolute;
            top: 50px;
            left: 50%;
            transform: translateX(-50%);
            width: 50%;
            text-align: center;
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            padding: 10px;
            z-index: 1000;
          "
        >
          <%= err %>
        </div>
        <% } %>

        <!--Main content area-->
        <main
          class="content"
          style="padding: 20px; background-color: #f8f9fa; min-height: 100vh"
        >
          <div
            style="
              max-width: 600px;
              margin: 0 auto;
              background: #ffffff;
              padding: 20px;
              border-radius: 8px;
              box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            "
          >
            <h2 style="text-align: center; margin-bottom: 20px; color: #343a40">
              Edit Blog
            </h2>
            <form
              action="/admin/updateprofessionalpost/<%= professional._id %>"
              method="POST"
              enctype="multipart/form-data"
              style="display: flex; flex-direction: column; gap: 15px"
            >
              <!-- Name Field -->
              <div>
                <label
                  for="name"
                  style="
                    display: block;
                    font-weight: bold;
                    margin-bottom: 5px;
                    color: #495057;
                  "
                  >Name</label
                >
                <input
                  type="text"
                  id="name"
                  name="name"
                  value="<%= professional.name %>"
                  placeholder="Enter professional name"
                  required
                  style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ced4da;
                    border-radius: 5px;
                    font-size: 16px;
                  "
                />
              </div>

              <!-- Description Field -->
              <div>
                <label
                  for="description"
                  style="
                    display: block;
                    font-weight: bold;
                    margin-bottom: 5px;
                    color: #495057;
                  "
                  >Description</label
                >
                <textarea
                  id="description"
                  name="description"
                  rows="5"
                  placeholder="Enter blog description"
                  required
                  style="
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ced4da;
                    border-radius: 5px;
                    font-size: 16px;
                  "
                >
<%= professional.description %></textarea
                >
              </div>

              <!-- Image Upload Field -->
              <% if (professional.image) { %>
              <div class="form-group">
                <label style="font-weight: bold; color: #495057"
                  >Current Image</label
                >
                <img
                  src="https://blog-project-adminpannel-ejs-crud-auth.onrender.com/<%= professional.image %>"
                  alt="professional Image"
                  style="
                    display: block;
                    max-width: 100px;
                    margin-top: 10px;
                    margin-bottom: 10px;
                  "
                />
              </div>
              <% } %>
              <div class="form-group">
                <label for="image" style="font-weight: bold; color: #495057"
                  >Upload New Image</label
                >
                <input
                  type="file"
                  class="form-control"
                  id="image"
                  name="image"
                  accept="image/*"
                  value="https://blog-project-adminpannel-ejs-crud-auth.onrender.com/<%= professional.image %>"
                  style="
                    border: 1px solid #ced4da;
                    border-radius: 5px;
                    padding: 5px;
                  "
                />
                <small
                  class="form-text text-muted"
                  style="font-size: 12px; color: red"
                  >If left empty, the current image will be retained.</small
                >
              </div>

              <!-- Submit Button -->
              <div>
                <button
                  type="submit"
                  style="
                    width: 100%;
                    padding: 12px;
                    background-color: #007bff;
                    color: #ffffff;
                    border: none;
                    border-radius: 5px;
                    font-size: 16px;
                    font-weight: bold;
                    cursor: pointer;
                  "
                >
                  Edit
                </button>
              </div>
            </form>
          </div>
        </main>

        <%- include('../common/footer.ejs') %>
      </div>
    </div>
  </body>
</html>
